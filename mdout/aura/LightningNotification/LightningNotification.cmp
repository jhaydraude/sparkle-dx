                    Test Platform Events Component
                </lightning:layoutItem>
                <lightning:layoutItem flexibility="auto" padding="around-small">
                    
                </lightning:layoutItem>
                <lightning:layoutItem flexibility="auto" padding="around-small">
                    
                </lightning:layoutItem>
                <lightning:layoutItem flexibility="auto" padding="around-small">
                    <lightning:button variant="brand" label="Run Async Job" onclick="{! c.handleClick }" />
                </lightning:layoutItem>
            </lightning:layout>
        </div>
	 
	
    
    
</aura:component>